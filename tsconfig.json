{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["dom", "es2023"],
    "module": "CommonJS",
    "strictPropertyInitialization": true,
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "moduleResolution": "node16"

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}